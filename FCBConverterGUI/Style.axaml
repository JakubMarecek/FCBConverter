<Styles xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControlsDV="clr-namespace:FCBConverterGUI.CustomControls"
    xmlns:local="clr-namespace:FCBConverterGUI"
    xmlns:sys="using:System"
    x:CompileBindings="True">

	<Style Selector="Grid.GroupBoxC">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="Margin" Value="5,30,5,0"/>
	</Style>
	<Style Selector="Rectangle.GroupBox">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="Stroke" Value="#F28C28"/>
		<Setter Property="RadiusX" Value="8"/>
		<Setter Property="RadiusY" Value="8"/>
		<Setter Property="StrokeThickness" Value="2"/>
		<Setter Property="StrokeDashArray" Value="2,2"/>
	</Style>
	<Style Selector="Label.GroupBoxName">
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="Margin" Value="30,-15,0,0"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Background" Value="#282828"/>
	</Style>
</Styles>